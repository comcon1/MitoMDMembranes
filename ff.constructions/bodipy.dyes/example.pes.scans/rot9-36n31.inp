 $CONTRL
  SCFTYP=RHF EXETYP=RUN 
! the runtype for relax surface scan
  RUNTYP=RSURFACE
! B3LYP in US means B3LYP5 in firefly
  DFTTYP=B3LYP5
! charge & multiplicity
  ICHARG=0 MULT=1
! use spherical functions also
  D5=.T.
  NZVAR=1
 $END

 $STATPT 
! settings for the relaxation method
! at the every point of the PES
  OPTTOL=1E-5 NSTEP=2000 METHOD=GDIIS
! frozen internal coordinate
  IFREEZ(1)=1
 $end

 $ZMAT
  DLC=.T. AUTO=.T.
! include explicitly the following internal coordinate
! into the final basis with delocalized coordinates
  IFZMAT(1)=3,10,9,36,35
! exclude the following internal coordinate from 
! source for combining delocalized coordinates
  IRZMAT(1)=3,13,9,36,35
  SCAN=.T.
! settings of delocalized coordinate building
  DLCTOL=1D-7 ORTTOL=1D-10 IFDMOD=2
 $END

! parameters of points at the surface
 $SURF DISP1=10 NDISP1=37 REUSE=.T. $END

! use only spherical f-functions
 $D5 D5=.F. $END

! system settings of the calculation
 $SYSTEM TIMLIM=2000 MWORDS=100 $END

 $GUESS GUESS=HUCKEL $END

 $BASIS
! the following line means 631*G
  GBASIS=N31 NGAUSS=6 NPFUNC=1 NDFUNC=1 NFFUNC=1
 $END

! settings for SCF calculations (standard)
 $SCF DIIS=.t. DIRSCF=.t. $END

